<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="4dp">

            <ImageView
                android:id="@+id/imagephong"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/check"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/Tenphong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF6347"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/GiaPhong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#808080"
            android:textSize="16sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/SLKhach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#808080"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/icon4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/customer"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/giam"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="4dp"
                android:layout_weight="0"/>

            <TextView
                android:id="@+id/soLuong"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:textColor="#008000"
                android:textSize="20sp"
                android:text="0"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/tang"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:layout_weight="0"/>

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="120dp"
                android:src="@drawable/bookmark" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="120dp">
        <TextView
            android:id="@+id/slPhong"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#808080"
            android:textSize="16sp"
            android:text="1 phòng"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tienPhong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Thành tiền:"
            android:textColor="#808080"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tienPhong1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#E30B0B"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:text=" 300.000đ"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>