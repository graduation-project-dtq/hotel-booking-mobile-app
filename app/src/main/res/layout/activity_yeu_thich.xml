<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Chọn ngày đến và ngày đi -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btnChonNgayDen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chọn ngày đến"
            android:layout_marginEnd="5dp"
            android:textSize="14sp"
            android:minHeight="40dp"
            android:backgroundTint="@color/teal_200"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/btnChonNgayDi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chọn ngày đi"
            android:textSize="14sp"
            android:minHeight="40dp"
            android:backgroundTint="@color/teal_200"
            app:cornerRadius="20dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textKynghi"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:text=""
        android:textSize="20sp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="15dp"/>
    <ListView
        android:id="@+id/listviewyt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/btnChonLai"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chọn lại"
            android:layout_marginEnd="5dp"
            android:textSize="14sp"
            android:minHeight="40dp"
            android:backgroundTint="@color/teal_200"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/btnThemVaoHoaDon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Đặt phòng"
            android:textSize="14sp"
            android:minHeight="40dp"
            android:backgroundTint="@color/teal_200"
            app:cornerRadius="20dp"/>


    </LinearLayout>
</LinearLayout>
